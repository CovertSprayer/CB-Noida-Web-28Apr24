<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col col-6 mx-auto">
        <form method="post" action="/signup">
            <div class="mb-3">
                <label for="username-inp" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" id="username-inp" aria-describedby="emailHelp">
              </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="role-inp" class="form-label">Role</label>
                <select name="role" id="role-inp" class="form-select form-select-sm" aria-label="Small select example">
                    <option selected value="buyer">Buyer</option>
                    <option value="seller">Seler</option>
                </select>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input name="password" type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <br>
          <p>
            Already have an account?
            <a href="/login">Login</a>
          </p>
    </div>
</div>