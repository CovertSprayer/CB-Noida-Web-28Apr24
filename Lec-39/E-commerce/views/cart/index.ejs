<%- layout('/layouts/boilerplate') -%>


<h1 class="display-5">User Cart</h1>

<div class="row">
    <div class="col-12 col-lg-6">
        <% for( let item of productsInCart ) { %>
            <div class="card mb-3" style="max-width: 640px;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= item.product.image %>" class="img-fluid rounded-start" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title d-flex justify-content-between align-items-center">
                        <span><%= item.product.title %></span>
                        <form action="" method="post">
                            <button class="btn btn"><i class="fa-solid fa-xmark"></i></button>
                        </form>
                      </h5>
                      <div class="d-flex justify-content-between">
                        <h5 class="">$ <%= item.product.price %></h5>
                        <div class="border border-2">
                          <form class="d-inline" action="/cartItems/<%= item.product._id %>/remove" method="post">
                            <button class="btn btn-sm">
                              <i class="fa-solid fa-minus"></i>
                            </button>
                          </form>
                          <span><%= item.quantity %></span>
                          <form class="d-inline" action="/cartItems/<%= item.product._id %>/add" method="post">
                            <button class="btn btn-sm">
                              <i class="fa-solid fa-plus"></i>
                            </button>
                          </form>
                        </div>
                      </div>
                      <p class="card-text"><%= item.product.description.slice(0,40) %>...</p>
                    </div>
                  </div>
                </div>
              </div>
        <% } %>
    </div>
    <div class="col-12 col-lg-4 mx-auto">
        <ul class="list-group">
            <% for( let item of productsInCart ) { %>
                <li class="list-group-item"><strong><%= item.product.title %></strong> - $ <%= item.product.price %> * <%= item.quantity %></li>
            <% } %>
            <li class="list-group-item"><strong>Total</strong> - $ <%= totalPrice %></li>
        </ul>
        <button class="btn btn-sm btn-success my-3">Checkout</button>
    </div>
</div>